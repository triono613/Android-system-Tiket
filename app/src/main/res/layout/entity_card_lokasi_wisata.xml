<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/linearCardLokwis"
        android:background="@drawable/cardview_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/_tv_img_card_lokasi_wisata"
            android:layout_gravity="center"
            android:background="@drawable/cardview"
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:padding="5dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_judul_card_lokasi_wisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_text_card_lokasi_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="" />
            <TextView
                android:id="@+id/tv_almt_card_lokasi_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="TextView" />

            <TextView
                android:id="@+id/tv_tgl_kunj_lokwis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="TextView" />

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            <TextView
                android:id="@+id/tv_kota_card_lokasi_wisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="TextView" />

                <LinearLayout
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                <Button
                    android:id="@+id/buttonH_card_lokasi_wisata"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="10sp"
                    android:paddingTop="2dp"
                    android:background="@drawable/bg_btn_blue_square"
                    android:text="Pilih"
                    android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_url_card_lokasi_wisata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                android:text="" />
        </LinearLayout>



        <TextView
            android:visibility="gone"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
