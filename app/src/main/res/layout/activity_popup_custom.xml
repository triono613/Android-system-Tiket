<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="470dp"
    android:padding="5dp"

    android:background="@color/colorcadetblueDashboard"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:background="@drawable/circle_close"
        android:layout_gravity="end"
        android:textColor="@color/whitePrimary"
        android:gravity="center"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/avatar"/>

        <TextView
            android:id="@+id/txt_view_name_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ariel Noah"
            android:textColor="@color/whitePrimary"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textview_email_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bandung, Indonesia"
            android:fontFamily="@font/mmedium"
            android:textColor="#fff"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textview_ket_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bandung, Indonesia"
            android:fontFamily="@font/mmedium"
            android:textColor="#fff"
            android:layout_marginTop="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">




            <Button
                android:id="@+id/btn_continue_popup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/bg_btn_blue"
                android:text="@string/lanjutkan"
                android:textColor="#FFF"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
