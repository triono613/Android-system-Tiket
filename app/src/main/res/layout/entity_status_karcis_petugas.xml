                    android:textSize="12sp" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/mmedium"
                    android:gravity="left"
                    android:paddingTop="2dp"
                    android:text=" : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status_ptgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="1dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="4dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/mmedium"
                    android:gravity="left|center_horizontal"
                    android:paddingTop="2dp"
                    android:text="Lokasi Wisata"
                    android:textSize="12sp" />

                <TextView

                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/mmedium"
                    android:gravity="left|center_horizontal"
                    android:paddingTop="2dp"
                    android:text=" : "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_lokWis_ptgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:gravity="left"
                    android:padding="1dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                >

                <Button
                    android:id="@+id/btn_entity_edit_ptgs"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_blue"
                    android:paddingEnd="5dp"
                    android:text="Ubah Cara Bayar"
                    android:textColor="#FFF"
                    android:textSize="9sp" />

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_entity_detail_ptgs"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_btn_blue"
                    android:paddingEnd="5dp"
                    android:text="detail"
                    android:textColor="#FFF"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_entity_view_ptgs"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_blue"
                    android:paddingEnd="5dp"
                    android:text="klaim"
                    android:textColor="#FFF"
                    android:textSize="9sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>